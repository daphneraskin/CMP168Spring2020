import java.io.*;
import java.util.Scanner; 

public class ReadAndEditFile {
	public static void main(String[] args) throws IOException{
		
		Scanner scnr = new Scanner(System.in);
		FileInputStream fileByteStream = null;
		Scanner inFS = null;
		boolean nameNotValid = true;
		
		while (nameNotValid) {
			
			System.out.print("What is the name of your file?");
			String fileName = scnr.nextLine();
		
			try {
				
				fileByteStream = new FileInputStream(fileName);
				inFS = new Scanner(fileByteStream);
				
				FileOutputStream fileStream = null;
			    PrintWriter outFS = null;
				
			    fileStream = new FileOutputStream("HomeworkOutput6-2.txt");
			    outFS = new PrintWriter(fileStream);
			    
			    String all = "";
			    
			    while (inFS.hasNextLine()) {
			    	String temp = inFS.nextLine();
			    	all = all + temp + "\n";
			    }
			    
			    
				char first = all.charAt(0);
				first = Character.toUpperCase(first);
				all = first + all.substring(1, all.length());
				
				all = all.replace("  ", " ");
				
				for (int i = 0; i< all.length()-2; i++) {
					
					if (all.charAt(i) == '.') {
						char a = all.charAt(i+2);
						a = Character.toUpperCase(all.charAt(i+2));
						all = all.substring(0, i+2) + a + all.substring(3);
					}
					
				}
				
				outFS.println(all);
				outFS.flush();
				outFS.close();
			    fileStream.close();
				nameNotValid = false;
				
			} catch (Exception FileNotFoundException) {
				System.out.println();
				System.out.println("File Not Found " + fileName);
			}
		}
	}
}


